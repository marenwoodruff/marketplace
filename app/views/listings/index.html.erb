<p id="notice"><%= notice %></p>

<h1 class="center margin-bottom">Listings</h1>

<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-xs-8 col-sm-4 col-md-3">
      <div class="thumbnail">
        <%= image_tag listing.image.url(:medium) %><br />
        <div class="caption center">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <%= link_to 'Show', listing, class: "btn btn-link" %> | 
          <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %> |
          <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<div class="col-md-12">
  <%= link_to 'Add a New Listing', new_listing_path, class: "btn btn-default center" %>
</div>
